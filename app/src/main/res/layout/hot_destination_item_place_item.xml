<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView 
        android:id="@+id/im_hot_des_item_item"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:scaleType="centerCrop"
        />
	<TextView
	    android:id="@+id/tv_place_info_hot_des_item_item"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="5dp"
	    android:layout_centerHorizontal="true"
	    android:text="一座充满爱的地方"
	    android:textSize="12dp"
	    android:textColor="@android:color/white"
	     />
	<TextView 
	    android:id="@+id/tv_place_name_hot_des_item_item"
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerHorizontal="true"
    	android:layout_above="@id/tv_place_info_hot_des_item_item"
    	android:layout_marginBottom="15dp"
    	android:text="巴厘岛"
    	android:textSize="15dp"
	    android:textColor="@android:color/white"
	    />
</RelativeLayout>

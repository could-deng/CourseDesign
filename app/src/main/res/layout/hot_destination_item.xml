<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/hot_des_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        >
        <ImageView 
            android:layout_width="5dp"
        	android:layout_height="match_parent"
        	android:background="@color/blue"
            />
        <TextView 
            android:id="@+id/hot_des_item_title_tv"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="免签海岛"
        	android:layout_marginLeft="5dp"
        	android:textSize="15dp"
            />
    </LinearLayout>
	<TextView 
	    android:id="@+id/hot_des_item_tips"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一半海水，整个天堂"
        android:layout_marginTop="10dp"
		android:layout_marginLeft="15dp"
		android:textSize="12dp"
		android:textColor="@color/Sgosh_White"
	    />
	<com.example.coursedesign.widget.ExpandGridView 
	    android:id="@+id/gv_hot_des_item_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_margin="2dp"
        android:background="@android:color/transparent"
        android:horizontalSpacing="4px"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:verticalSpacing="4px">
	 </com.example.coursedesign.widget.ExpandGridView>
</LinearLayout>
